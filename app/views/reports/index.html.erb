<h1>Listing reports</h1>

<table>
  <thead>
    <tr>
      <th>Reportnumber</th>
      <th>Reference</th>
      <th>Species</th>
      <th>Variety</th>
      <th>Weight</th>
      <th>Dimension</th>
      <th>Shapecut</th>
      <th>Colour</th>
      <th>Item</th>
      <th>Transparency</th>
      <th>Requesof</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.reportnumber %></td>
        <td><%= report.reference %></td>
        <td><%= report.species %></td>
        <td><%= report.variety %></td>
        <td><%= report.weight %></td>
        <td><%= report.dimension %></td>
        <td><%= report.shapecut %></td>
        <td><%= report.colour %></td>
        <td><%= report.item %></td>
        <td><%= report.transparency %></td>
        <td><%= report.requesof %></td>
        <td><%= report.comments %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>
  Download:
  <%= link_to "CSV", reports_path(format: "csv") %> 
  
</p>
<br>
<%= will_paginate @reports %>
<br>

<%= link_to 'New Report', new_report_path %>
